    <script>
        const ctx = document.getElementById('savingDaysChart').getContext('2d');
        const savingDaysChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Days to Use (or lose)', 'Savable Days'],
                datasets: [{
                    label: 'Vacation Days Breakdown',
                    data: [20, 10],
                    backgroundColor: [
                        '#A855F7',
                        '#581C87'
                    ],
                    borderColor: '#1E1B3A',
                    borderWidth: 4,
                    hoverOffset: 8
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '60%',
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            color: '#E0E0E0',
                            font: {
                                size: 14
                            }
                        }
                    },
                    tooltip: {
                        callbacks: {
                            title: function(tooltipItems) {
                                const item = tooltipItems[0];
                                let label = item.chart.data.labels[item.dataIndex];
                                if (Array.isArray(label)) {
                                  return label.join(' ');
                                } else {
                                  return label;
                                }
                            }
                        },
                        backgroundColor: '#0B0A1A',
                        titleColor: '#FFFFFF',
                        bodyColor: '#E0E0E0',
                        titleFont: {
                           size: 16,
                           weight: 'bold',
                        },
                        bodyFont: {
                           size: 14
                        },
                        padding: 12,
                        cornerRadius: 8,
                        displayColors: false
                    }
                }
            }
        });
    </script>
